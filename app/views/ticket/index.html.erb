<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <h3>Please check the tickets you want to buy</h3>

    <% @tickets.each do |ticket| %>
      <tr>
        <td><p>Event:<%= ticket.event.name %></p></td>
        <td><%= ticket.event.start_date %></td>
        <td>$<%= ticket.price %></td> 
        <td><%= check_box("Ticket", "validated")%></td>
        <td><%= link_to 'Show', ticket %></td>
        <% if can? :manage, @ticket %>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <% end %>
        <% if can? :destroy, @ticket %>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>

    <td>
  </tbody>
</table>

<br>

<% if can? :manage, @ticket %>
<%= link_to 'New ticket', new_ticket_path %>
<% end %>
